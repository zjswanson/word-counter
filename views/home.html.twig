<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" charset="utf-8">
    <title>Word Counter</title>
</head>
<body>
    <div class='container'>
        <div class='well'>
            <h1>Word Counter</h1>
        </div>
        <div class='row'>
            <div class='col-md-5'>
                {% block inputform %}
                <h2>Create A Word Count:</h2>
                <form action='/display' method='post'>
                    <div class='form-group'>
                        <label for='word'>Enter the word you would like to count</label>
                        <input required type='text' name='word' class='form-control'>
                    </div>
                    <div class='form-group'>
                        <label for='phrase'>Enter the phrase in which you would like the word counted</label>
                        <input required type='text' name='phrase' class='form-control'>
                    </div>
                    <button type='submit' class='btn btn-info'>Count words!</button>
                </form>
                {% endblock %}
                {% block navbuttons %}
                <form method="get">
                    <h4>Try searching some of our texts:</h4>
                    <div class="form-group">
                        <button class='btn btn-info' type="submit" name="jabberwocky" formaction="/jabberwocky">Jabberwocky by Lewis Carol</button>
                        <button class='btn btn-info' type="submit" name="gettysburg" formaction="/gettysburg">The Gettysburg Address</button>
                        <button class='btn btn-info' type="submit" name="stairway" formaction="/stairway">Stairway to Heaven by Led Zepplin</button>
                    </div>
                </form>
                {% endblock %}
            </div>
            <div class='col-md-7'>
                {% block display %}
                    <h2>Your count results will display here:</h2>
                {% endblock %}
            </div>
        </div>
    </div>
</body>
</html>
